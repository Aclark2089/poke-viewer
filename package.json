{
    "name": "poke-viewer",
    "version": "1.0.0",
    "description": "Simple Application to View Pokemon",
    "engines": {
        "node": ">=12.0"
    },
    "main": "index.js",
    "scripts": {
        "serve": "node src/index.js",
        "start": "nodemon --inspect src/index.js",
        "test": "jest -c jest.config.js",
        "lint": "eslint src/",
        "format": "prettier --write \"src/**/*.js\"",
        "ci:test": "yarn test --coverage --runInBand",
        "ci:validate": "concurrently --kill-others-on-fail \"yarn lint\" \"yarn ci:test\"",
        "update": "yarn upgrade-interactive --latest"
    },
    "keywords": [
        "GraphQL",
        "Apollo",
        "Server",
        "Pokemon"
    ],
    "author": "R. Alex Clark",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.8.0",
        "concurrently": "^4.1.1",
        "dotenv": "^8.0.0",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-jest": "^22.13.6",
        "eslint-plugin-prettier": "^3.1.0",
        "graphql-query-generator": "^0.5.5",
        "husky": "^3.0.1",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.0",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2"
    },
    "dependencies": {
        "apollo-server-express": "^2.14.2",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "graphql": "^14.4.2",
        "graphql-subscriptions": "^1.1.0",
        "graphql-tools": "^4.0.5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
