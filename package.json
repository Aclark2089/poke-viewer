{
    "name": "poke-viewer",
    "version": "1.0.0",
    "description": "Simple Application to View Pokemon",
    "engines": {
        "node": ">=9.11.1"
    },
    "main": "index.js",
    "scripts": {
        "serve": "node src/index.js",
        "start": "nodemon --inspect src/index.js",
        "test": "jest -c jest.config.js",
        "test:int": "jest -c jest.config.integration.js",
        "lint": "eslint src/",
        "format": "prettier --write \"src/**/*.js\""
    },
    "keywords": [
        "GraphQL",
        "Apollo",
        "Server",
        "Pokemon"
    ],
    "author": "R. Alex Clark",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.3.1",
        "dotenv": "^6.1.0",
        "eslint": "^5.8.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-jest": "^22.3.0",
        "eslint-plugin-prettier": "^3.0.1",
        "graphql-query-generator": "^0.5.5",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.5",
        "nodemon": "^1.18.6",
        "prettier": "^1.16.4"
    },
    "dependencies": {
        "apollo-server-express": "^2.1.0",
        "axios": "^0.18.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "esm": "^3.2.13",
        "express": "^4.16.4",
        "graphql": "^14.0.2",
        "graphql-subscriptions": "^1.0.0",
        "graphql-tools": "^4.0.3"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "src/**/*.js": [
                "prettier --write",
                "git add"
            ]
        }
    }
}
